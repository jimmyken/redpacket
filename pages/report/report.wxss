/* pages/report/report.wxss */
page{
  height: 100%;
}
.box{
  height: 100%;
}
/*头部文字*/
 .head{
  border-bottom: 2rpx solid #d9d9d9;
  border-top: 2rpx solid #d9d9d9;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f1f1f1;
}
 .head text{
   font-size: 32rpx;
   color: #999;
   margin-left:30rpx;
}

/*举报原因一栏*/
.cause{
  /* height: 767rpx;
  width: 95%; */
  margin-left:30rpx; 
}

 .radio radio{
   position: absolute;
   right: 30rpx;
} 

.radio view{
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #d9d9d9;
}

/*个人信息一栏*/
.info{
  height: 192rpx;
  width: 95%;
  margin-left:30rpx;
}
.info view{
  border-top: 2rpx solid #d9d9d9;
  height: 90rpx;
  line-height: 90rpx; 
}
.info view text{
  position: relative;
  bottom: 5px
}

.info input{
  width: 70%;
  display: inline-block;
  margin:20rpx 0 0 40rpx; 
  font-size: 34rpx;
  position: relative;
  top:-1rpx;
}

.btn{
  width: 100%;
  height: 100rpx;
  background-color:#f1f1f1; 
  border-top:2rpx solid #d9d9d9;  
}

.btn button{
  width: 90%;
  background-color: #1aad19;
  /* margin: 30rpx; */
  margin-top: 20rpx;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
}