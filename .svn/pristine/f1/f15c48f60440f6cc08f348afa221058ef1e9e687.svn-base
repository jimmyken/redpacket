/* pages/forward game/forward game.wxss */

page {
  height: 100%;
}

.box {
  width: 100%;
  height: 100%;
  background-color: #dedede;
  text-align: center;
}

/*头像*/

.userinfo_avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
  position: relative;
  z-index: 99;
}

/*用户名*/

.nickName {
  font-size: 28rpx;
  position: relative;
  z-index: 99;
}

/*白色框*/

.bottom {
  width: 90%;
  height: 350rpx;
  background-color: #fff;
  margin: 70rpx auto 0;
  padding-top: 40rpx;
  border-radius: 10rpx;
}

/*白色框内的三个view*/

.bottom view {
  width: 90%;
  height: 113rpx;
  line-height: 113rpx;
  margin: 5rpx auto 0;
}

/*底部所有的按钮*/

.bottom button {
  height: 75%;
  border-radius: 50rpx;
}

/* 【转发到群聊】按钮 */

.bottom .forward button {
  background-color: #fd4760;
  color: #fff;
  font-size: 32rpx;
}

/* 【生成朋友圈分享图】按钮 */

.bottom .picture button {
  background-color: #dedede;
  color: #000;
  font-size: 32rpx;
}

/*【我也要参赛】字体*/

.bottom .text text {
  color: #000;
  font-size: 32rpx;
  position: relative;
  bottom: 20rpx;
}

.qr {
  /* background-color: darkcyan; */
  height: 300rpx;
  margin-top: 100rpx;
}

.qr .arc {
  width: 1500rpx;
  height: 1500rpx;
  border: 4rpx solid #b9b9b9;
  position: absolute;
  left: -375rpx;
  top: -1080rpx;
  border-radius: 50%;
  background-color: #f6f6f6;
}

.qr .circle {
  width: 190rpx;
  height: 190rpx;
  /* background-color: fuchsia; */
  margin: 0 auto;
  position: relative;
  border-radius: 50%;
  border: 20rpx solid #dedede;
   box-shadow:0px 0px 2px 2px #ccc;
}
.qr .circle image{
  border-radius:50%;
  width: 100%;
  height: 100%;
  /* objec-fit: cover; */
}
