
page {
  height: 100%;
  background-color: #f1f1f1;
}

.box {
  width: 92%;
  height: 95%;
  margin: 60rpx auto;
}

.question {
  width: 100%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #fff;
  margin-top: 30rpx;
}

.question image {
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin: 16rpx 20rpx;
}

.question text {
  margin-left: 20rpx;
  font-size: 32rpx;
}

.answer {
  width: 91%;
  height: auto;
  font-size: 32rpx;
  background-color: #fff;
  margin: 4rpx auto 0;
  padding: 20rpx 32rpx;
}

.answer text {
  font-size: 30rpx;
  color: #333;
}

.motton button {
  background-color: #fd4760;
  color: #fff;
  font-size: 30rpx;
  margin: 40rpx 0;
  border-radius: 40rpx;
}
